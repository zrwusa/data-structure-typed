{
  "extends": "./tsconfig-base.json",
  "compilerOptions": {
    "target": "ES2018",
    "lib": ["ES2018", "DOM"],

    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationMap": false,
    "outDir": "dist/types"
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["dist", "node_modules", "test"]
}
